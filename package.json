{
  "name": "gundam-bot",
  "version": "1.0.0",
  "main": "dist/bot.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/bot.ts",
    "build": "tsc",
    "start": "node dist/bot.js",

    "register": "tsx src/register-commands.ts global",
    "register:guild": "tsx src/register-commands.ts guild",
    "register:global": "tsx src/register-commands.ts global",
    "clear:guild": "tsx src/register-commands.ts clear:guild",
    "clear:global": "tsx src/register-commands.ts clear:global"
  },
  "dependencies": {
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
